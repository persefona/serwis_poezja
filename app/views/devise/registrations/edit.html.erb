
<div class ="panel-body about">

 <div class="heading">
  <h1>Edycja danych użytkownika:</h1>
  <br />
</div>

<div class="row">
  <div class="col-md-8">
    <%= form_for(@user, class: "form-horizontal") do |f| %>
      <div class="form-group">
        <% if @user.errors.any? %>
          <ul class="text-danger">
             <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
             <% end %>
          </ul>
        <% end %>
      </div>


    <div class="form-group">
          <%= f.label :avatar, class: 'col-sm-2 control-label'  %>
          <div class="col-sm-10">
              <%= f.file_field :avatar , class: "form-control" %>
          </div>
      </div>

       
      <div class="form-group">
        <%= f.label :login, "Login", class: "col-sm-2 control-label" %>
        <div class="col-sm-10"><%= f.text_field :login, class: "form-control" %></div>
      </div>
      <br />
      <div class="form-group">
        <%= f.label :email, "E-mail", class: "col-sm-2 control-label" %>
        <div class="col-sm-10"><%= f.text_field :email, class: "form-control" %></div>
      </div>
      <br />
      <div class="form-group">
        <%= f.label :password, "Hasło", class: "col-sm-2 control-label" %>
        <div class="col-sm-10"><%= f.password_field :password, placeholder: "Pozostaw to pole puste jeśli nie chcesz zmieniać", class: "form-control" %></div>
      </div>
      <br />
      <div class="form-group">
        <%= f.label :password_confirmation, "Potwierdź hasło", class: "col-sm-2 control-label" %>
        <div class="col-sm-10"><%= f.password_field :password_confirmation, class: "form-control" %></div>
      </div>
      <br />
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Potwierdź", class: "btn btn-default" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row">
  <hr />
  <%= button_to "Usuń konto", registration_path(resource_name), data: { confirm: "Jesteś pewien?" }, method: :delete, class: "btn btn-default" %>
  <hr />
</div>

</div>
</div>